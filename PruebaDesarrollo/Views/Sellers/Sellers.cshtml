@model List<Seller>

<h1>Lista de Vendedores</h1>

<table border="1">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Documento</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>#</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
        <tr>
            <td>@seller.Code</td>
            <td>@seller.Document</td>
            <td>@seller.Name</td>
            <td>@seller.LastName</td>
            <td><a href="UpdateSeller?id=@seller.Code">Editar</a></td>
            <td><a href="DeleteSeller?id=@seller.Code">Eliminar</a></td>
        </tr>
        }
    </tbody>
</table>