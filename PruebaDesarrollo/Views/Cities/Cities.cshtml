@model List<City>

<h1>Lista de Ciudades</h1>

<table border="1">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Descripcion</th>
            <th>#</th>
            <th>#</th>
            <th>#</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.Code</td>
                <td>@city.Description</td>
                <td><a href="../Sellers/CreateSellers?id=@city.Code">Añadir Vendedor</a></td>
                <td><a href="UpdateCity?id=@city.Code">Editar</a></td>
                <td><a href="../Sellers/Sellers?id=@city.Code">Detalle</a></td>
                 <td><a href="DeleteCity?id=@city.Code">Eliminar</a></td>
                   
                
            </tr>
        }
    </tbody>
</table>